{
  "name": "vook-client",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=@vook-client/web",
    "dev:workshop": "turbo dev --filter=@vook-client/workshop",
    "dev:extension": "turbo dev --filter=@vook-client/extension",
    "lint": "turbo lint",
    "lint-front": "lint-staged",
    "test": "turbo test",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@titicaca/prettier-config-triple": "^1.1.0",
    "eslint-plugin-vitest": "^0.2.6",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "turbo": "latest",
    "typescript": "5.2.2"
  },
  "prettier": "@titicaca/prettier-config-triple",
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@8.14.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
